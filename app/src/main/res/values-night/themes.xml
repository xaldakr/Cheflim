<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Cheflim" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorSecondary">@color/red</item>
        <item name="alertDialogTheme">@style/CustomAlertDialogTheme</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <!-- Cambiar el color de fondo del cuadro de diálogo -->
        <item name="android:windowBackground">@color/orange</item>
        <!-- Cambiar el color del texto en el cuadro de diálogo -->
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/CustomAlertDialogButton2</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/CustomAlertDialogButton</item>

    </style>

    <style name="CustomAlertDialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <!-- Cambiar el color de fondo del botón del CD-->
        <item name="android:background">@color/red</item>
        <!-- Cambiar el color del texto del botón del CD-->
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CustomAlertDialogButton2" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <!-- Cambiar el color de fondo del botón del CD-->
        <item name="android:background">@color/orange</item>
        <!-- Cambiar el color del texto del botón del CD-->
        <item name="android:textColor">@color/white</item>
    </style>
</resources>