<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PerfilDatos">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@color/olive">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/orange">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/topcontainer"
                android:padding="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:id="@+id/ETuserpd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="28sp"
                        android:text="Lorem Ipsum"
                        android:textColor="@color/white"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:id="@+id/ETnamepd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:text="Lorem Ipsum Dolem Sit Amet"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/orange">
                <ImageButton
                    android:id="@+id/Misrecetaspd"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:backgroundTint="@color/none"
                    android:layout_weight="1"
                    android:contentDescription="@string/default_content"
                    android:padding="0dp"
                    android:src="@drawable/misrecetas"
                    android:scaleType="fitCenter"/>
                <ImageButton
                    android:id="@+id/Favoritospd"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:backgroundTint="@color/none"
                    android:layout_weight="1"
                    android:contentDescription="@string/default_content"
                    android:padding="0dp"
                    android:src="@drawable/favoritos"
                    android:scaleType="fitCenter"/>
                <ImageButton
                    android:id="@+id/Misdatospd"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:backgroundTint="@color/red"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:contentDescription="@string/default_content"
                    android:src="@drawable/misdatos"
                    android:scaleType="fitCenter"/>
            </LinearLayout>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nombre Real:"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/dataname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="20sp"
                    android:inputType="text"
                    android:background="@drawable/edittextredondo"
                    android:textColor="@color/black"
                    android:text="Lorem Ipsum Dolem Sit Amet"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nombre de Usuario:"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/datauser"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="20sp"
                    android:inputType="text"
                    android:background="@drawable/edittextredondo"
                    android:textColor="@color/black"
                    android:text="Lorem Ipsum"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Correo:"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/datamail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="20sp"
                    android:inputType="text|textEmailAddress"
                    android:background="@drawable/edittextredondo"
                    android:textColor="@color/black"
                    android:text="LoremIpsum@Dolem.SitAmet"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"/>
                <Button
                    android:id="@+id/submiteditar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/red"
                    android:text="Editar Datos"
                    android:textSize="24sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"/>
                <Button
                    android:id="@+id/submitpass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/red"
                    android:text="Cambiar Contraseña"
                    android:textSize="24sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"/>
                <EditText
                    android:id="@+id/datapass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="20sp"
                    android:inputType="text|textPassword"
                    android:background="@drawable/edittextredondo"
                    android:textColor="@color/black"
                    android:hint="Editar Contraseña"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/MenuInicio"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/inicio_def"
            android:contentDescription="@string/default_content"
            android:background="@drawable/pmenubutton"/>
        <ImageButton
            android:id="@+id/MenuLista"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/lista_def"
            android:contentDescription="@string/default_content"
            android:background="@drawable/pmenubutton"/>
        <ImageButton
            android:id="@+id/MenuDescubre"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/descubre_def"
            android:contentDescription="@string/default_content"
            android:background="@drawable/pmenubutton"/>
        <ImageButton
            android:id="@+id/MenuPerfil"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/perfil_sel"
            android:contentDescription="@string/default_content"
            android:background="@drawable/pmenubutton"/>

    </LinearLayout>
</LinearLayout>